    <main>
      <div class="sub-heading"><h2>Products</h2></div>
      <div class="new-container">
        <h2>New Product</h2>
        <form action="#" method="post">
          <div>
            <label for="name">Name</label><br />
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Enter name..."
              required
              maxlength="25"
            />
          </div>
          <div>
            <label for="brand">Brand</label><br />
            <input
              type="text"
              id="brand"
              name="brand"
              placeholder="Enter brand..."
              required
              maxlength="25"
            />
          </div>
          <div>
            <label for="slug">Slug</label><br />
            <input
              type="text"
              id="slug"
              name="slug"
              placeholder="Enter brand..."
              required
              maxlength="25"
            />
          </div>
          <div>
            <label for="color">Name</label><br />
            <input
              type="text"
              id="color"
              name="color"
              placeholder="Enter color..."
              required
              maxlength="25"
            />
          </div>
          <div>
            <label for="description">Description</label><br />
            <textarea
              name="description"
              id="description"
              rows="10"
              cols="30"
              required
            ></textarea>
          </div>

          <div>
            <label for="photo">Photo</label><br />
            <input type="file" name="image" id="photo" required />
          </div>
          <div>
            <label for="SKU">SKU</label><br />
            <input
              type="text"
              id="SKU"
              name="SKU"
              pattern="[A-Z]{3}[0-9]{3}"
              placeholder="Enter the SKU..."
              required
            />
          </div>
          <div>
            <label for="price">Price</label><br />
            <input type="number" name="price" id="price" step="0.01" required />
          </div>
